# See http://editorconfig.org
root = true

[*]
charset = utf8
end_of_line = lf
insert_final_newline = true
indent_style = space

[*]
indent_size = 2

[R/*R]
trim_trailing_whitespace=true

[tests/testthat/*R]
trim_trailing_whitespace=false

[src/*]
trim_trailing_whitespace=true

[vignette/*]
trim_trailing_whitespace=true
